{
  "manifest_version": 3,
  "name": "EyeZen - AI Eye Health Monitor",
  "version": "1.0.0",
  "description": "AI-powered eye health monitoring with fatigue detection, break reminders, and TCM massage guidance for computer users.",
  
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "activeTab",
    "offscreen",
    "tabs",
    "aiLanguageModelOriginTrial"
    ],
  
  "optional_permissions": [],
  
  "host_permissions": [],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "EyeZen - Eye Health Monitor",
    "default_icon": {
      "16": "assets/icons/icon-16.png",
      "32": "assets/icons/icon-32.png",
      "48": "assets/icons/icon-48.png",
      "128": "assets/icons/icon-128.png"
    }
  },
  
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  
  "options_page": "options.html",
  
  "content_security_policy": {
      "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; worker-src 'self';"
    },
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/wasm/*",
        "assets/images/*",
        "assets/mediapipe-worker-loader.js",
        "cv-worker.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
    "16": "assets/icons/icon-16.png",
    "32": "assets/icons/icon-32.png",
    "48": "assets/icons/icon-48.png",
    "128": "assets/icons/icon-128.png"
  },
  
  "author": "EyeZen Team",
  
  "homepage_url": "https://github.com/eyezen/chrome-extension",
  
  "minimum_chrome_version": "127",
  
  "offline_enabled": true,
  
  "commands": {
    "start_break": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "Command+Shift+B"
      },
      "description": "Start an eye break session"
    },
    "toggle_detection": {
      "suggested_key": {
        "default": "Ctrl+Shift+D",
        "mac": "Command+Shift+D"
      },
      "description": "Toggle eye fatigue detection"
    }
  }
}